<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HayvanClickPostActivity"
    android:background="@color/Orange">

    <ImageView
        android:id="@+id/esya_post_resmi"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/addimage" />

    <TextView
        android:id="@+id/esya_yorum_yapmak"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="191dp"
        android:background="@android:color/white"
        android:text="Post Açıklaması" />

    <Button
        android:id="@+id/esya_post_kaydet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="105dp"
        android:background="@drawable/buttonshape"
        android:text="Postu Güncelle" />

    <Button
        android:id="@+id/esya_post_sil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/buttonshape"
        android:text="Postu Sil" />

</RelativeLayout>